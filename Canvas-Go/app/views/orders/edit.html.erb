<div class="border"></div>
  <section class="main-container">

    <!-- list of steps -->
    <div class="container wrap">
      <div class="step current">
        <a href="index.html"><h2><span>1</span> Upload your photograph</h2></a>
      </div>

      <div class="step current">
        <a href="edit.html"><h2><span>2</span> Edit &amp; preview</h2></a>
      </div>

      <div class="step last">
        <a href="checkout.html"><h2><span>3</span> Complete your purchase</h2></a>
      </div>
    </div>


    <div class="container wrap">
      <section class="half">
        <div class="options">
          <h3><span>Adjust Your Photo</span></h3>
        </div>

        <!-- crop button -->
        <div class="effect">
          <button class="red">Crop</button>
        </div>

        <!-- special effects -->
        <div class="effect wrap">
          <div class="name">Effects</div>
          <div class="option-effects">
            <input type="image" src="/assets/thumb-effect.png" name="photoEffect" class="active" value="vintage">
            <input type="image" src="/assets/thumb-effect.png" name="photoEffect" value="vintage">
            <input type="image" src="/assets/thumb-effect.png" name="photoEffect" value="vintage">
            <input type="image" src="/assets/thumb-effect.png" name="photoEffect" class="last" value="vintage">
          </div>
        </div>

        <!-- border -->
        <div class="effect wrap">
          <div class="name">Border<span class="mark">?</span></div>
          <div class="option">
            <input type="button" name="borderColors" class="none" value="none">
            <input type="button" name="borderColors" class="black" value="black">
            <input type="button" name="borderColors" class="red" value="red">
            <input type="button" name="borderColors" class="blue" value="blue">
          </div>
          <div class="pricing">+$15.50</div>
        </div>

        <!-- rolled canvas -->
        <div class="effect wrap">
          <div class="name">Rolled Canvas<span class="mark">?</span></div>
          <div class="option">
            <input type="button" name="rolledCanvas" value="yes">
            <input type="button" name="rolledCanvas" value="no">
          </div>
          <div class="pricing">+$10.00</div>
        </div>

        <!-- fancy edges -->
        <div class="effect wrap">
          <div class="name">Fancy Edges<span class="mark">?</span></div>
          <div class="option">
            <input type="button" name="fancyEdges" value="yes">
            <input type="button" name="fancyEdges" value="no">
          </div>
          <div class="pricing">+$5.50</div>
        </div>

        <div class="options">
          <h3><span>Choose Your Canvas</span></h3>

          <div class="option-canvas">
            <div class="shadow small"><input type="button" src="thumb-effect.png" name="canvasChoice" class="active" value="sm"></div>
            <div class="shadow medium"><input type="button" src="thumb-effect.png" name="canvasChoice" value="med"></div>
            <div class="shadow large last"><input type="button" src="thumb-effect.png" name="canvasChoice" value="lg"></div>
          </div>
        </div>

      </section><!-- end customizations -->


      <section class="half last">
        <!-- image preview -->
        <%= image_tag @order.image if @order.image? %>

        <!-- items table -->
        <div class="price wrap">
          <h3><span>Print Total</span></h3>

          <div class="item">16x16 Canvas</div> <div class="cost">$16.99</div>
          <div class="item">16x16 Canvas</div> <div class="cost">$16.99</div>
        </div>

        <!-- checkout and total -->
        <div class="total-container wrap">
          <button class="red">Proceed to Checkout</button>
          <div class="total">$123.12</div>
        </div>

      </section><!-- end image and total -->
    </div>

  </section>
<div class="border"></div>
<!-- end features -->

